{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "app.js",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { 
      "source": "/((?!app\\.js|style\\.css|.*\\.png|.*\\.jpg|.*\\.mp3).*)", 
      "destination": "/index.html" 
    }
  ]
}