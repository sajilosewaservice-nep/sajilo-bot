{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/dashboard.js",
      "use": "@vercel/static"
    },
    {
      "src": "public/style.css",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { 
      "source": "/((?!dashboard\\.js|style\\.css|app\\.js|.*\\.png|.*\\.jpg|.*\\.mp3).*)", 
      "destination": "/public/index.html" 
    }
  ]
}